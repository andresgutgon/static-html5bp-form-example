// snippets pequenos
.validate_button
    @extend .green-css3button
    :margin 0 0 0 2em
    :float left
.tag
    :font-size 0.8em
    :line-height 1.6
    :text-transform capitalize
    :display inline-block
    :padding 0.2em 0.4em
    :margin 0.6em 0.3em 0 0
    :color $base_grey
    +border-radius(2px)
    :background-color $grey_extra_lighter
    :border 1px solid $grey_extra_light
    strong
        :color $grey_dark
        :text-transform none
.error-tag
    @extend .tag
    +border-radius(4px)
    :border 0
    :background-color $red_error
    strong
        :color #fff

.page_filters
    :float right
    :margin 0 0 0.6em 1em
    :width 200px
    :padding  1em
    +border-radius(4px)
    :background-color $grey_extra_lighter
    +single-box-shadow($grey_light, 0, 1px, 2px, false, true)
    :border 1px solid $classic_grey
    button
        :margin-top 0.5em
    p
        :margin 0 0 0.2em 0
        :font-size 0.7em
        :line-height 1.3
        :color $base_grey
        label
            :font-size 1.2em
            :color $grey_dark
            :text-transform uppercase
        input
            :font-size 1.4em

    ul
        :margin-bottom 0.5em
        li
            a
                :text-decoration none
                &:hover
                    :text-decoration underline
                &.selected
                    :font-weight bold
                    :color $orange_darker
                    &:hover
                        :text-decoration none
$redeem_padding : 4%
.article_detail
    :float left
    :width 92%
    +border-top-left-radius(6px)
    +border-top-right-radius(6px)
    :background-color $grey_extra_light
    :padding $redeem_padding $redeem_padding 0 $redeem_padding
    :border-bottom 1px solid $grey_light
    ul
        @extend .tabs_menu
        :padding 0 !important
        :width 100%
        :margin-top 1em !important
        :float left !important
    .inner_article
        :float left
        :width 100%
        .photo
            :float left
            :padding 0.2em
            :margin  0 0.5em 0 0
            :border 1px solid $grey_light
            :background-color #fff
            +single-box-shadow($grey_light, 0, 1px, 4px)
        .tag
            :margin-top 0

        h4
            :font-size 0.8em
            :line-height 1.5em
            :font-weight bold
            :margin-bottom 0.2em
            :color $base_grey
            :text-transform uppercase
            :margin-left 106px
        h3
            :color $grey_dark
            :font-size 1.6em
            :line-height 1.1em
            :margin-bottom 0.1em
            :margin-left 106px