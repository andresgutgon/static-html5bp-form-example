ul.tabs_menu
    :float right
    :padding 0 2em 0 0
    :margin 0 0 -1px 0
    :position relative
    li
        :float left
        :margin 0 0 0 0.2em

        &.current
            a
                :background-color #fff
                +border-top-right-radius(4px)
                +border-top-left-radius(4px)
                :border-top 1px solid $grey_light
                :border-left 1px solid $grey_light
                :border-right 1px solid $grey_light
                :font-weight bold
                +link-colors($link-color, $link-color, $link-color, $link-color, $link-color)
                &:hover
                    :text-decoration none
        a
            :text-decoration none
            :font-size 1.2em
            :display block
            :padding 10px 12px
            +link-colors($grey_darker, $link-hover-color, $grey_darker, $grey_darker, $grey_darker)
            &:hover
                :text-decoration underline
#commerce_menu
    @extend .full_parent
    ul
        @extend .tabs_menu
                
